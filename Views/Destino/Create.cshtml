@model AgenciaDeViagens.Models.Destino

@{
    ViewData["Title"] = "Novo Destino";
}

<h1>Cadastro de Destino</h1>

<h4>Novo Destino</h4>
<hr />
<div class="row">
    <div class="col-md-4 bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pais" class="control-label">País<small class="text-danger"> *campo obrigatório</small></label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF" class="control-label">UF<small class="text-danger"> *campo obrigatório</small></label>
                <input asp-for="UF" class="form-control" />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade<small class="text-danger"> *campo obrigatório</small></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Confirmar Cadastro" class="btn btn-success" /> | 
                <a asp-action="Index"> Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
